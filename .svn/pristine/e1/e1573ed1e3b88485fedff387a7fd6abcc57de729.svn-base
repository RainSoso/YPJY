.jeecg-basic-menu__sidebar-hor.ant-menu-horizontal {
  margin-bottom: -5px;
  font-size: 16px;
}

/* 中间菜单区域样式调整 */
.jeecg-layout-header {
  // height: 115px !important;
  // line-height: 115px !important;
  padding: 10px 20px 0 !important;
  .ant-menu {
    justify-content: space-evenly;
  }

  /* 菜单项选中状态背景色 */
  .ant-menu-item-selected {
    background: linear-gradient( #4C82FC 16.93%, #F1F8FF 99.29%);
    color: #fff !important;
    border-radius: 6px 6px 0 0;

    &::after {
      border-bottom: 2px solid #F1F8FF !important;
    }
  }
}

// tab滑动条样式
.jeecg-basic-menu .ant-menu-submenu, .jeecg-basic-menu .ant-menu-submenu-inline {
  width: 100px;
  text-align: center;
}
 