.my-table {
  width: 100%;
  table-layout: fixed;
  border-left: 1px solid #f0f0f0;
  border-top: 1px solid #f0f0f0;

  & > tr:nth-child(2n),
  & > tbody > tr:nth-child(2n){
    background-color: #fafafa;
  }

  & > tr > th,
  & > thead > tr > th,
  & > tbody > tr > th,
  & > tfoot > tr > th,
  & > tr > td,
  & > thead > tr > td,
  & > tbody > tr > td,
  & > tfoot > tr > td {
    padding: 8px;
    border-right: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
  }

  & > tr > th,
  & > thead > tr > th,
  & > tbody > tr > th,
  & > tfoot > tr > th {
    font-weight: 600;
    background-color: #fafafa;
  }

  & > tr:hover,
  & > tbody > tr:hover,
  & > tfoot > tr:hover {
    background-color: #e6f7ff;
  }

  &.no-hover > tr:hover,
  &.no-hover > tbody > tr:hover,
  &.no-hover > tfoot > tr:hover {
    background-color: transparent;
  }

  &.outline {
    border-width: 0;
    border-collapse: collapse;
  }

  &.outline > tr > th,
  &.outline > thead > tr > th,
  &.outline > tbody > tr > th,
  &.outline > tfoot > tr > th,
  &.outline > tr > td,
  &.outline > thead > tr > td,
  &.outline > tbody > tr > td,
  &.outline > tfoot > tr > td {
    outline: 1px solid #ccc;
    border-width: 0;
  }

}

